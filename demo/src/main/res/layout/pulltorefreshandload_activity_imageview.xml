<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.arta.lib.widget.pulltorefreshandload.PullToRefreshLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include layout="@layout/pulltorefreshandload_refresh_head" />
        <!-- 支持所有实现Pullable接口的View -->

        <com.arta.lib.widget.pulltorefreshandload.view.PullableImageView
            android:id="@+id/content_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pulltorefreshandload_h" />

        <include layout="@layout/pulltorefreshandload_load_more" />
    </com.arta.lib.widget.pulltorefreshandload.PullToRefreshLayout>

</FrameLayout>